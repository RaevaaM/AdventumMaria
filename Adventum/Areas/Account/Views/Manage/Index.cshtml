@model ManageProfileModel

@{
    ViewData["Title"] = "Лична информация";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-area="Account" asp-controller="Manage" asp-action="Index" method="post">
            <h2>@ViewData["Title"]</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.FirstName" class="form-control" placeholder="First name"/>
                <label asp-for="@Model.FirstName">Име</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="@Model.LastName" class="form-control" placeholder="Last name"/>
                <label asp-for="@Model.LastName">Фамилия</label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email"/>
                <label asp-for="@Model.Email">Email</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            
            
            <div class="form-floating mb-3">
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone number"/>
                <label asp-for="@Model.PhoneNumber">Телефон</label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            
            @Html.HiddenFor(m => m.UserId)

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Обнови</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}