
@model IEnumerable<Event>
@{
    ViewData["Title"] = "РЕЗЕРВИРАЙ";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/Adventum.styles.css" asp-append-version="true" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

</head>
<body>
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="item-container">
                <div class="img-container">
                    <img src="~/photos/@item.ImageUrl" />
                </div>
                <div class="body-container">
                    <div class="overlay">
                    </div>

                    <div class="event-info">
                        <p class="title">@item.Name</p>
                        <div class="separator"></div>
                        <p class="info">@item.ShortDescription</p>
                        <p class="price">@item.Price лв</p>

                        <div class="additional-info">
                            <p class="info"><i class="bi bi-geo-alt"></i>@item.Location.Name</p>
                            <p class="info"><i class="bi bi-stopwatch"></i>@item.Duration</p>

                            <p class="info descr">
                                @item.Description
                            </p>
                        </div>

                    </div>
                    <a class="action" asp-controller="EventReservations" asp-action="Create" asp-route-sportActivityId="@item.SportActivityId">Резервирай</a>
                </div>
            </div>
        }
       

